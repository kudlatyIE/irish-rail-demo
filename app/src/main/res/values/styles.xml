<resources>

    <!-- Base application theme. -->
    <style name="Theme.RailDesign" parent="Base.Theme.RailDesign">

    </style>

    <style name="Base.Theme.RailDesign" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomHoloDialog" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:borderlessButtonStyle">@android:style/Widget.Holo.Button.Borderless</item>
        <item name="android:buttonBarStyle">@android:style/Holo.ButtonBar.AlertDialog</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>

