<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00fffc"
    >
    <LinearLayout
        android:id="@+id/fragment_all_mapa_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_all_mapa_text_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FRAGMENT DETAILS MAPA!"
            />
        <Button
            android:id="@+id/fragment_all_mapa_btn_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REFRESH"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_all_map_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_all_mapa_top"
        />


</RelativeLayout>