<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6ff00"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/fragment_stations_main_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRAGEMNT MAIN"
        />
    
    <Button 
        android:id="@+id/fragment_stations_main_btn_getdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET DETAILS"
        />
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    

        <TextView 
        	android:id="@+id/adapter_stations_text_station_id"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textStyle="bold"
        	android:text="STATION ID"
        />
        <TextView 
        	android:id="@+id/adapter_stations_text_station_code"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textStyle="bold"
        	android:text="STATION CODE"
        />
        <TextView 
        	android:id="@+id/adapter_stations_text_station_name"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textStyle="bold"
        	android:text="STAION NAME"
        />
 
	</LinearLayout>
    
    <ListView 
    	android:id="@+id/fragment_stations_main_listview"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	
    ></ListView>
    

</LinearLayout>
