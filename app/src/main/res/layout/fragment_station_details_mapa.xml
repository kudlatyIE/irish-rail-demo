<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
     >
    <TextView
        android:id="@+id/fragment_details_mapa_text_info"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        />

    <ImageView
        android:id="@+id/fragment_details_mapa_img_show_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fragment_details_mapa_text_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/default_half_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:src="@drawable/ic_favorit_no"
        />
    
    <FrameLayout
        android:id="@+id/fragment_details_map_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_details_mapa_text_info"
        />

</RelativeLayout>

